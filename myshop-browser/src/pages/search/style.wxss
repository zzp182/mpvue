.search {
  height: 100%;
  position: relative;
}
.search .head {
  height: 91rpx;
  display: flex;
  padding: 0 32rpx;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.15);
}
.search .head div:nth-child(1) {
  height: 59rpx;
  display: flex;
  align-items: center;
  background: #f4f4f4;
}
.search .head div:nth-child(1) img {
  display: inline-block;
  width: 31rpx;
  height: 31rpx;
  padding: 0 20rpx;
}
.search .head div:nth-child(1) input {
  display: inline-block;
  width: 480rpx;
  height: 59rpx;
  margin-left: 10rpx;
}
.search .head div:nth-child(1) .del {
  width: 53rpx;
  height: 53rpx;
  padding: 0;
}
.search .head div:nth-child(2) {
  flex: 1;
  text-align: center;
}
.search .searchtips {
  position: absolute;
  width: 100%;
  top: 91rpx;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  padding: 0 32rpx;
  z-index: 9;
  background: #fff;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}
.search .searchtips div div {
  padding: 20rpx 0;
}
.search .searchtips .nogoods {
  text-align: center;
  margin-top: 300rpx;
}
.search .history {
  background: #fff;
  padding: 32px;
}
.search .history .t {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.search .history .t div:nth-child(2) {
  width: 55rpx;
  height: 55rpx;
  background: url("http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/del1-93f0a4add4.png") no-repeat;
  background-size: 100% 100%;
}
.search .history .cont {
  display: flex;
  flex-wrap: wrap;
}
.search .history .cont div {
  padding: 10rpx;
  border: 1rpx solid #999;
  margin: 0 30rpx 20rpx 0;
}
.search .history .cont .active {
  border: 1px solid #b4282d;
  color: #b4282d;
}
.search .hotsearch {
  margin-top: 20rpx;
}
